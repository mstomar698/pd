{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "DOM"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/", "tests/", "config/", "*"],
  "exclude": ["node_modules"]
}
